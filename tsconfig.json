{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",

    "baseUrl": "./reaser",
    "outDir": "./dist",
    "paths": {
      "reaser/*": ["./*"],
    }
  }
}
