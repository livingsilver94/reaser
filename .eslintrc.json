{
    "env": {
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "standard",
        "plugin:promise/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["json", "mocha", "promise"],
    "rules": {
        "indent": [2, "tab"],
        "no-tabs": 0,
        "quotes": [2, "double"],
        "space-before-function-paren": [2, "never"]
    }
}
